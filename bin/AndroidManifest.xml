<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coffeestrike.bettershoppinglist"
    android:versionCode="1"
    android:versionName="development" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.NFC"/>

    <application

        android:allowBackup="true"
        android:icon="@drawable/fridge"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:backupAgent="com.coffeestrike.bettershoppinglist.extra.ListBackUpHelper">
        
        <meta-data android:name="com.google.android.backup.api_key" 
       		android:value="AEdPqrEAAAAIrBnZYwZI6C826gtZSq25nGnoUGDme5iCyCVSaA" />
        <activity
            android:name="com.coffeestrike.bettershoppinglist.ui.MainActivity"
            android:label="@string/app_name" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/com.coffeestrike.bettershoppinglist"/>
            </intent-filter>
        </activity>
        <activity android:name="com.coffeestrike.bettershoppinglist.ui.SettingsActivity" 
            android:parentActivityName="com.coffeestrike.bettershoppinglist.ui.MainActivity">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.coffeestrike.bettershoppinglist.MainActivity" />
        </activity>
    </application>

</manifest>
