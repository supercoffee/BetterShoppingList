<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coffeestrike.bettershoppinglist"
    android:versionCode="1"
    android:versionName="development" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.NFC"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_fridge"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.coffeestrike.bettershoppinglist.NfcMainActivity"
            android:label="@string/app_name" android:launchMode="singleTask">
            
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/com.coffeestrike.bettershoppinglist"/>
            </intent-filter>
        </activity>
        <activity android:name="com.coffeestrike.bettershoppinglist.LoaderActivity" android:launchMode="singleTask"><intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter></activity>
        <activity android:name="com.coffeestrike.bettershoppinglist.MainActivity"></activity>
    </application>

</manifest>
